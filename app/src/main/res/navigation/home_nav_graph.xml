<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.ahmed.gourmetguide.iti.home.home_view.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_mealDetails"
            app:destination="@id/mealDetails" />
    </fragment>
    <fragment
        android:id="@+id/mealDetails"
        android:name="com.ahmed.gourmetguide.iti.home.home_view.MealDetails"
        android:label="Meal Details"
        tools:layout="@layout/fragment_meal_details">
        <argument
            android:name="mealDetails"
            app:argType="com.ahmed.gourmetguide.iti.model.MealDTO" />
    </fragment>
</navigation>