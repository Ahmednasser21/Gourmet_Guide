<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.ahmed.gourmetguide.iti.home.home_view.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_mealDetails"
            app:destination="@id/mealDetails" />
        <action
            android:id="@+id/action_homeFragment_to_categoryMeals"
            app:destination="@id/categoryMeals" />
    </fragment>
    <fragment
        android:id="@+id/mealDetails"
        android:name="com.ahmed.gourmetguide.iti.meal_details_by_id.meal_view.MealDetails"
        android:label="Meal Details"
        tools:layout="@layout/fragment_meal_details">
        <argument
            android:name="mealId"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/categoryMeals"
        android:name="com.ahmed.gourmetguide.iti.category_meals.category_meals_view.CategoryMeals"
        android:label="Category Meals"
        tools:layout="@layout/fragment_category_meals">
        <action
            android:id="@+id/action_categoryMeals_to_mealDetails"
            app:destination="@id/mealDetails" />
        <argument
            android:name="categoryName"
            app:argType="string" />
    </fragment>
</navigation>